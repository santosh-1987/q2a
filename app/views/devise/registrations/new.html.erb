<div class="col-xs-12 col-sm-8 col-md-6 col-sm-offset-2 col-md-offset-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),role: "form") do |f| %>
      <%= devise_error_messages! %>
      <h2>Sign Up <small>It's an eazy job for you.</small></h2>
      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :first_name,class: "form-control input-lg",placeholder: "First Name", tabindex: "1" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.text_field :last_name,class: "form-control input-lg",placeholder: "Last Name", tabindex: "2" %>
          </div>
        </div>
      </div>
      <div class="form-group">
        <%= f.text_field :username,class: "form-control input-lg",placeholder: "User Name", tabindex: "3" %>
      </div>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true,class: "form-control input-lg",placeholder: "Email Address", tabindex: "4" %>
      </div>
      <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.password_field :password, autocomplete: "off",class: "form-control input-lg",placeholder: "Your Secret", tabindex: "5" %>
          </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-6">
          <div class="form-group">
            <%= f.password_field :password_confirmation, autocomplete: "off",class: "form-control input-lg",placeholder: "Confirm your Secret", tabindex: "6"  %>
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-xs-4 col-sm-3 col-md-3">
					<span class="button-checkbox">
						<button type="button" class="btn" data-color="info" tabindex="7">I Agree</button>
            <input type="checkbox" name="terms_condition" id="t_and_c" class="hidden" value="1">
					</span>
        </div>
        <div class="col-xs-8 col-sm-9 col-md-9">
          By clicking <strong class="label label-primary">Register</strong>, you agree to the <a href="#" data-toggle="modal" data-target="#t_and_c_m">Terms and Conditions</a> set out by this site, including our Cookie Use.
        </div>
      </div>

      <hr class="colorgraph">
      <div class="row">
        <div class="col-xs-12 col-md-6"><%= f.submit "Sign up",class: "btn btn-primary btn-block btn-lg" %></div>
        <div class="col-xs-12 col-md-6"><%= render "devise/shared/links" %></div>
      </div>
  <% end %>
</div>